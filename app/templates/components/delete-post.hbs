<!--<br><br>-->
<div class="right ui red button" style="background-color: indiared;" {{action 'openDeleteModal' post}}>
<span class="glyphicon glyphicon-remove"></span>
</div>
{{#ui-modal name=modalName class=modalName}}
  <div class="header">
    Please Confirm...
  </div>
  <div class="content">
    Are you sure you need to delete this post?
  </div>
  <br>
  <div class="actions">
    <div class="ui black deny button">
      No
    </div>
    <div class="ui positive right labeled icon button">
      Yes
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}
